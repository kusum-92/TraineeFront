@page
@model TraineeFront.Pages.Course.CreateModel

@{
    ViewData["Title"] = "Create Employee";
}
<h1>Create Trainee</h1>
<form method="post" class="mt-3">
    <div class="form-group mb-3">
        <label asp-for="Course.CourseName" class="form-label"></label>
        <input asp-for="Course.CourseName" class="form-control" placeholder="Enter Course name" />
        <span asp-validation-for="Course.CourseName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Course.CourseDescription" class="form-label"></label>
        <input asp-for="Course.CourseDescription" class="form-control" placeholder="Enter Course description" />
        <span asp-validation-for="Course.CourseDescription" class="text-danger"></span>
    </div>

    
    

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="CourseList" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
